/* pages/select/select.wxss */

page {
  background-color: #f8f8f9;
}

.img-block {
  height: 300rpx;
}

.img-block image {
  width: 100%;
  height: 100%;
}

.title-info {
  position: absolute;
  width: 670rpx;
  top: 20rpx;
  left: 40rpx;
  display: flex;
  flex-direction: column;
}

.title-info text:nth-child(1) {
  font-size: 56rpx;
  color: #495060;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.title-info text:nth-child(2) {
  margin-top: 6rpx;
  color: #666;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}

.select-block {
  margin: 50rpx;
  border-radius: 20rpx;
  overflow: hidden;
}

.select-btn {
  padding-left: 30rpx;
  padding-right: 30rpx;
}
