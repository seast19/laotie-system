.card-block { 
    padding: 20rpx;  
    z-index: 50;
    position: fixed;
    bottom: 120rpx;
    left: 20rpx;
    width: 670rpx;
    height: 700rpx;
    border-radius: 20rpx;
    background-color: #f5f5f5;
    box-shadow: 0 5px 15px -5px rgba(0, 0, 0, 0.5);  
    overflow-y: auto;
  }
  
  .card-title {
    padding: 20rpx;
    text-align: center;
    color: #1c2438;
  }
  
  .card-container {
    display: flex;
    justify-content: space-around;
    align-content: flex-start;
    flex-wrap: wrap;
    padding: 10rpx;
  }
  
  .card-item {
    width: 100rpx;
    height: 70rpx;
    margin: 12rpx;
    border-radius: 40rpx;
    border: 1rpx solid #dddee1;
    background-color: #fff;
    text-align: center;
    line-height: 68rpx;
  }
  
  .card-active {
    background-color: #cce5ff;
  }
  
  .card-success {
    background-color: #d4edda;
  }
  
  .card-error {
    background-color: #f8d7da;
  }